
<h1><%=@post.title%></h1>
<h1><%=@post.content%></h1>
  <label> Post Comments </label>
    <ul>
      <%@post.comments.each do |comment|%>
        <li><%= comment.user.username %> says: <%= comment.content %></li>
      <%end%>
    </ul>


  <%=form_for @comment do |c| %>
  <%=c.label :content %><br>
  <%=c.text_field :content %><br>
  <%=c.collection_select :user_id, User.all, :id, :username %>
  <%=c.submit%>
  <%end%>
